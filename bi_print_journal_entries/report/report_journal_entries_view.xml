<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <template id="journal_entry_template_report_view">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page">
                    <br/>
                    <br/>
                    <div class="oe_structure"/>
                    <div>
                        <h2 class="text-center mb32">
                            <t t-if="o.journal_id.type == 'bank'">
                                <t t-if="o.payment_id.payment_type == 'outbound'">
                                    <strong>Bank Paid Voucher</strong>
                                </t>
                                <t t-elif="o.payment_id.payment_type == 'inbound'">
                                    <strong>Bank Receipt Voucher</strong>
                                </t>
                                <t t-else="">
                                    <strong>Journal Voucher</strong>
                                </t>
                            </t>
                            <t t-if="o.journal_id.type == 'cash'">
                                <t t-if="o.payment_id.payment_type == 'outbound'">
                                    <strong>Cash Paid Voucher</strong>
                                </t>
                                <t t-elif="o.payment_id.payment_type == 'inbound'">
                                    <strong>Cash Receipt Voucher</strong>
                                </t>
                                <t t-else="">
                                    <strong>Journal Voucher</strong>
                                </t>
                            </t>
                            <t t-if="o.journal_id.type == 'general'">
                                <t t-if="o.payment_id.payment_type == 'outbound'">
                                    <strong>Journal Voucher</strong>
                                </t>
                                <t t-elif="o.payment_id.payment_type == 'inbound'">
                                    <strong>Journal Voucher</strong>
                                </t>
                                <t t-else="">
                                    <strong>Journal Voucher</strong>
                                </t>
                            </t>
                            <!--                            <t t-if="o.journal_id.type == 'sale'">-->
                            <!--                                <strong>Sale Journal Entry</strong>-->
                            <!--                            </t>-->
                            <!--                            <t t-if="o.journal_id.type == 'purchase'">-->
                            <!--                                <strong>Purchase Journal Entry</strong>-->
                            <!--                            </t>-->
                            <!--                            <t t-if="o.journal_id.type == 'cash'">-->
                            <!--                                <strong>Cash Voucher</strong>-->
                            <!--                            </t>-->
                            <!--                            <t t-if="o.journal_id.type == 'bank'">-->
                            <!--                                <strong>Bank Voucher</strong>-->
                            <!--                            </t>-->
                            <!--                            <t t-if="o.journal_id.type == 'general'">-->
                            <!--                                <strong>Miscellaneous Voucher</strong>-->
                            <!--                            </t>-->
                        </h2>
                    </div>
                    <br/>

                    <div class="row" id="journal_information">
                        <div class="col-8">
                            <div>
                                <strong>Journal Entry :</strong>
                                <p t-field="o.name"/>
                            </div>

                            <div class="text-left">
                                <strong>Date :</strong>
                                <p t-field="o.date"/>
                            </div>
                        </div>

                        <div class="col-8">
                            <t t-if="o.journal_id.type in ['bank', 'cash']">
                                <div>
                                    <strong>Journal :</strong>
                                    <p t-field="o.journal_id"/>
                                </div>
                            </t>
                            <div class="text-left">
                                <strong>Cheque Number :</strong>
                                <p t-field="o.ref"/>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-12">
                            <strong>Description</strong>&#160;&#160;&#160;&#160; &#160;&#160;&#160;&#160;&#160;&#160;&#160;<span
                                t-field="o.remarks"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                        </div>
                        <div class="col-11">
                            <div class="col-12" style="background-color:#000000;">
                                <hr style="border-color: black; border-width: 1px;"/>
                            </div>
                        </div>
                    </div>

                    <br/>
                    <br/>

                    <t t-if="o.company_id.id == 2">
                        <t t-set="show_partner_column" t-value="any(line.partner_id for line in o.line_ids)"/>
                        <t t-set="show_account_column" t-value="any(line.account_id for line in o.line_ids)"/>
                        <t t-set="show_label_column" t-value="any(line.name for line in o.line_ids)"/>
                        <t t-set="show_due_date_column" t-value="any(line.date_maturity for line in o.line_ids)"/>
                        <t t-set="show_analytic_column" t-value="any(line.analytic_account_id for line in o.line_ids)"/>
                        <t t-set="show_tax_column" t-value="any(line.tax_ids for line in o.line_ids)"/>
                        <t t-set="show_debit_column" t-value="any(line.debit for line in o.line_ids)"/>
                        <t t-set="show_credit_column" t-value="any(line.credit for line in o.line_ids)"/>

                        <table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                            <thead t-if="show_partner_column or show_account_column or show_label_column or show_due_date_column or show_analytic_column or show_tax_column or show_debit_column or show_credit_column">
                                <tr>
                                    <th t-if="show_partner_column">Partner</th>
                                    <th t-if="show_account_column">Account</th>
                                    <th t-if="show_label_column">Label</th>
                                    <th t-if="show_due_date_column">Due Date</th>
                                    <th t-if="show_analytic_column">Analytic Account</th>
                                    <th t-if="show_tax_column">Taxes(%)</th>
                                    <th t-if="show_debit_column">Debit</th>
                                    <th t-if="show_credit_column">Credit</th>
                                </tr>
                            </thead>
                            <tbody class="consumed_tbody">
                                <t t-set="total" t-value="0.0"/>
                                <t t-set="total1" t-value="0.0"/>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td t-if="show_partner_column">
                                            <span t-field="line.partner_id"/>
                                        </td>
                                        <td t-if="show_account_column">
                                            <span t-field="line.account_id"/>
                                        </td>
                                        <td t-if="show_label_column">
                                            <span t-field="line.account_id"/>
                                        </td>
                                        <td t-if="show_due_date_column">
                                            <span t-field="line.date_maturity"/>
                                        </td>
                                        <td t-if="show_analytic_column">
                                            <span t-field="line.analytic_account_id"/>
                                        </td>
                                        <td t-if="show_tax_column">
                                            <span t-field="line.tax_ids"/>
                                        </td>
                                        <td t-if="show_debit_column">
                                            <span t-field="line.debit"/>
                                        </td>
                                        <td t-if="show_credit_column">
                                            <span t-field="line.credit"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td t-if="show_partner_column"></td>
                                    <td t-if="show_account_column"></td>
                                    <td t-if="show_label_column"></td>
                                    <td t-if="show_due_date_column"></td>
                                    <td t-if="show_analytic_column"></td>
                                    <td t-if="show_tax_column">
                                        <strong>Total:</strong>
                                    </td>
                                    <td t-if="show_debit_column" width="10%">
                                        <strong>
                                            <span>
                                                <t t-esc="o.get_credit_total()"/>
                                            </span>
                                        </strong>
                                    </td>
                                    <td t-if="show_credit_column" width="10%">
                                        <strong>
                                            <span>
                                                <t t-esc="o.get_debit_total()"/>
                                            </span>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <t t-if="o.company_id.id != 2">
                        <table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Partner</th>
                                    <th>Account</th>
                                    <th>Label</th>
                                    <th>Due Date</th>
                                    <th>Analytic Account</th>
                                    <th>Taxes(%)</th>
                                    <th>Debit</th>
                                    <th>Credit</th>
                                </tr>
                            </thead>
                            <tbody class="consumed_tbody">
                                <t t-set="total" t-value="0.0"/>
                                <t t-set="total1" t-value="0.0"/>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.partner_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.account_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date_maturity"/>
                                        </td>
                                        <td>
                                            <span t-field="line.analytic_account_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.tax_ids"/>
                                        </td>
                                        <td>
                                            <span t-field="line.debit"/>
                                        </td>
                                        <td>
                                            <span t-field="line.credit"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <strong>Total:</strong>
                                    </td>
                                    <td width="10%">
                                        <strong>
                                            <span>
                                                <t t-esc="o.get_credit_total()"/>
                                            </span>
                                        </strong>
                                    </td>
                                    <td width="10%">
                                        <strong>
                                            <span>
                                                <t t-esc="o.get_debit_total()"/>
                                            </span>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <br/>
                    <div class="row">
                        <div class="col-12">
                            <strong>Rupees in Words:&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;<span
                                    t-field="o.text_amount_credit"/>
                            </strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                        </div>
                        <div class="col-10">
                            <div class="col-12" style="background-color:#000000;">
                                <hr style="border-color: black; border-width: 1px;"/>
                            </div>
                        </div>
                    </div>
                    <div class="footer">
                        <div class="row">
                            <div class="col-1"/>
                            <div class="col-2" style="background-color:#000000;">
                                <hr style="border-color: black; border-width: 1px;"/>
                            </div>
                            <div class="col-1">
                            </div>
                            <div class="col-1"/>
                            <div class="col-2" style="background-color:#000000;">
                                <hr style="border-color: black; border-width: 1px;"/>
                            </div>
                            <div class="col-1">
                            </div>
                            <div class="col-1"/>
                            <div class="col-2" style="background-color:#000000;">
                                <hr style="border-color: black; border-width: 1px;"/>
                            </div>
                            <div class="col-1">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4" align="center">
                                <b>Prepared By</b>
                            </div>
                            <div class="col-4" align="center">
                                <b>Checked By</b>
                            </div>
                            <div class="col-4" align="center">
                                <b>Approved By</b>
                            </div>
                        </div>

                    </div>
                </div>
            </t>
        </template>

        <template id="journal_entry_report_template_id">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="bi_print_journal_entries.journal_entry_template_report_view" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>
