<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <report
                id="custom_report_sale"
                model="sale.order"
                string="Print Sale Order"
                report_type="qweb-pdf"
                name="prisma_reports_inherit.report_sale_template_custom"
                file="prisma_reports_inherit.report_sale_template_custom"
                attachment_use="False"
                menu="False"
        />

        <record id="view_sale_form_custom" model="ir.ui.view">
            <field name="name">view.sale.form.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(prisma_reports_inherit.custom_report_sale)d"
                            attrs="{'invisible': [('company_id', '!=', 2)]}" string="Print Quotation/Order"
                            type="action" icon="gtk-print"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>